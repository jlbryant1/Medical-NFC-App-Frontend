<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="hrvRowModel" type="com.jamessapplication.app.modules.hrv.data.model.HrvRowModel"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumntoday"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleindigo_1">
        <TextView android:ellipsize="end" android:id="@+id/txtToday"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_155pxh"
            android:layout_marginStart="@dimen/_155pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{hrvRowModel.txtToday}"
            style="@style/txtNunitoSansbold10_1" tools:text="@string/lbl_today"/>
        <LinearLayout android:id="@+id/linearRowtime"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_8pxh"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_1">
            <LinearLayout android:id="@+id/linearRowgrouptwentyfour"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_weight="0.71" android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageGroupTwentyFour"
                    android:layout_height="@dimen/_11pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="@dimen/_11pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group24"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group24"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLanguage"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_4pxh"
                    android:layout_weight="0.43"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{hrvRowModel.txtLanguage}"
                    android:textAllCaps="true"
                    style="@style/txtNunitoSansbold15" tools:text="@string/lbl_90"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMs"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_weight="0.32"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{hrvRowModel.txtMs}"
                    style="@style/txtNunitoSansregular10" tools:text="@string/lbl_ms"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTimeThree"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_8pxh"
                android:layout_marginStart="@dimen/_225pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_weight="0.29" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{hrvRowModel.txtTimeThree}"
                style="@style/txtNunitoSansregular9_1" tools:text="@string/lbl_14_06"/>
        </LinearLayout>
    </LinearLayout>
</layout>
